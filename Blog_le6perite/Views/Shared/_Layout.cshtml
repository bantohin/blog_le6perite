<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blog - le6perite", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="navButtons">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("All Posts", "Index", "Posts")</li>
                    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated == true)
                    {
                        <li>@Html.ActionLink("New Post", "Create", "Posts")</li>
                        <li>@Html.ActionLink("My Posts", "Index", "MyPosts")</li>
                    }                   
                    <li>
                        <form method="post">                            
                                <input type="text" name="searchEngine" style="margin-top: 11px; margin-right: 5px" />
                                <input type="submit" value="&#x1f50d;" style="margin-top: 11px" />               
                       </form>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_Notifications")
        @RenderBody()
        <hr />
        <footer>
            <p style="color: #542733">&copy; @DateTime.Now.Year - Blog by le6perite</p>
        </footer>
    </div>       
